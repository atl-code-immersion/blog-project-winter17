<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
        <h3><%= post.title %></h3>
        <p>by <em><%= link_to post.user.username, user_posts_path(name: post.user.username) %></em></p>
        <p><em>posted on <%= local_time(post.created_at, "%m/%d/%Y at %l:%M%P") %></em></p>
        <p>
          <%= post.blog_entry[0..100].html_safe %>... <%= link_to "[READ MORE]", post %>
        </p>
        <p>
          <% if current_user.id == post.user_id %>
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %> 
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<%= paginate @posts %>





